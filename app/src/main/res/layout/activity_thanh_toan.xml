<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityThanhToan">

    <TextView
        android:id="@+id/tvCamOn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text=" CẢM ƠN QUÝ KHÁCH  \n XIN QUÝ KHÁCH VUI LÒNG ĐỢI TRONG GIÂY LÁT \n RẤT HÂN HẠNH ĐƯỢC PHỤC VỤ QUÝ KHÁCH"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="center"
        android:background="#E17096"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtTimKiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Nhập vào tên khách hàng"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnTimKiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xem đơn hàng" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lvTimKiem"
            android:layout_width="match_parent"
            android:layout_height="268dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnDatLai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoàn tất" />

</LinearLayout>