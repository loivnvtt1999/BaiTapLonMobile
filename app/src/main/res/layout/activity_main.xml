<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <TextView
            android:id="@+id/tvTenKhachHang"
            android:layout_width="139dp"
            android:layout_height="match_parent"
            android:text="Tên khách hàng: "
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/edtTenKhachHang"
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nhập vào tên khách hàng "
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMaSoBan"
            android:layout_width="139dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Mã số bàn: "
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#000"/>

        <EditText
            android:id="@+id/edtMaSoBan"
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
           android:hint="Nhập mã số bàn (ví dụ 01, 02)"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/btnGoiMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gọi món"
        android:background="#F60B0B"
        android:gravity="center"
        android:textColor="#EFEAEA"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnXoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xóa lịch sử đơn hàng" />
</LinearLayout>